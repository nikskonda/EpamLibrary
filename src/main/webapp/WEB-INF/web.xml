    <!--<error-code>404</error-code>-->
    <!--<location>/jsp/Error.jsp</location>-->
    <!--</error-page>-->






    <servlet>
        <servlet-name>Library</servlet-name>
        <servlet-class>by.epam.java.training.web.servlet.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Library</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.epam.java.training.web.servlet.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>



    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <jsp-config>
        <taglib>
            <taglib-uri>pagination</taglib-uri>
            <taglib-location>/WEB-INF/tld/Pagination.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>itemsPerPage</taglib-uri>
            <taglib-location>/WEB-INF/tld/ItemsPerPage.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>
